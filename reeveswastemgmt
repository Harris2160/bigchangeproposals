    <script>
        const engineersInput = document.getElementById('engineersInput');
        const jobsPerDayInput = document.getElementById('jobsPerDayInput');
        const officeStaffInput = document.getElementById('officeStaffInput');
        const officeSalaryInput = document.getElementById('officeSalaryInput');

        const engineersVal = document.getElementById('engineersVal');
        const jobsVal = document.getElementById('jobsVal');
        const officeVal = document.getElementById('officeVal');
        const salaryVal = document.getElementById('salaryVal');

        const totalSavings = document.getElementById('totalSavings');
        const adminSavings = document.getElementById('adminSavings');
        const fuelSavings = document.getElementById('fuelSavings');
        const revenueSavings = document.getElementById('revenueSavings');

        function updateCalculator() {
            const engineers = parseInt(engineersInput.value);
            const jobsPerDay = parseInt(jobsPerDayInput.value);
            const officeStaff = parseInt(officeStaffInput.value);
            const salary = parseInt(officeSalaryInput.value);

            // Update display labels
            engineersVal.textContent = engineers;
            jobsVal.textContent = jobsPerDay;
            officeVal.textContent = officeStaff;
            salaryVal.textContent = '£' + salary.toLocaleString();

            // ROI Logic
            // Savings from office staff efficiency (approx 20% time saved per staff member)
            const adminSaved = (officeStaff * salary * 0.20);
            
            // Savings from fuel/drive time (approx £1500 per vehicle/year based on 11% reduction)
            const fuelSaved = (engineers * 1500);

            // Revenue boost from 1 extra job per week per driver (assume £150 per job profit * 48 weeks)
            const revenueSaved = (engineers * 150 * 48 * 0.1); // Scaled for conservatism

            const total = adminSaved + fuelSaved + revenueSaved;

            adminSavings.textContent = '£' + Math.round(adminSaved).toLocaleString();
            fuelSavings.textContent = '£' + Math.round(fuelSaved).toLocaleString();
            revenueSavings.textContent = '£' + Math.round(revenueSaved).toLocaleString();
            totalSavings.textContent = '£' + Math.round(total).toLocaleString();
        }

        engineersInput.addEventListener('input', updateCalculator);
        jobsPerDayInput.addEventListener('input', updateCalculator);
        officeStaffInput.addEventListener('input', updateCalculator);
        officeSalaryInput.addEventListener('input', updateCalculator);

        // Initial run
        updateCalculator();
    </script>
